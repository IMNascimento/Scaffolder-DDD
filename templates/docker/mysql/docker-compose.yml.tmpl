version: "3.9"

services:
  db:
    image: mysql:8.0
    container_name: ${project_name}_db
    environment:
      MYSQL_ROOT_PASSWORD: rootpass
      MYSQL_DATABASE: ${project_name}
      MYSQL_USER: appuser
      MYSQL_PASSWORD: apppass
    ports:
      - "3306:3306"
    volumes:
      - mysqldata:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-prootpass"]
      interval: 5s
      timeout: 5s
      retries: 10
    networks:
      - app-network

  api:
    build:
      context: .
      dockerfile: Dockerfile
      target: development
    container_name: ${project_name}_api
    depends_on:
      db:
        condition: service_healthy
    env_file:
      - .env
    environment:
      PYTHONPATH: /app/src
      DATABASE_URL: mysql+aiomysql://appuser:apppass@db:3306/${project_name}
    ports:
      - "8000:8000"
    volumes:
      - ./src:/app/src
      - ./tests:/app/tests
      - ./alembic:/app/alembic
      - ./scripts:/app/scripts
    command: >
      bash -c "
        chmod +x ./scripts/*.sh &&
        ./scripts/wait-for-db.sh &&
        alembic upgrade head &&
        uvicorn --app-dir src app.main:app --host 0.0.0.0 --port 8000 --reload
      "
    networks:
      - app-network

volumes:
  mysqldata:
    driver: local

networks:
  app-network:
    driver: bridge
